@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Prenom" class="form-control" placeholder="Votre prénom" />
                <label asp-for="Input.Prenom" class="form-label"></label>
                <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Nom" class="form-control" />
                <label asp-for="Input.Nom" class="form-label"></label>
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Adresse" class="form-control" />
                <label asp-for="Input.Adresse" class="form-label"></label>
                <span asp-validation-for="Input.Adresse" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DateNaissance" class="form-control" type="date"  />
                <label asp-for="Input.DateNaissance" class="form-label"></label>
                <span asp-validation-for="Input.DateNaissance" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
     
            <div class="form-group">
                <label asp-for="Input.PhotoFile" class="form-label">Photo de profil</label>
                <input type="file" asp-for="Input.PhotoFile" class="form-control-file" />
                <span asp-validation-for="Input.PhotoFile" class="text-danger"></span>

            </div>
            @if (Model.Input.Photo != null)
            {
                <div class="mt-3">
                    <p>Photo actuelle :</p>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Input.Photo)"
                         alt="Photo de profil" class="img-thumbnail" width="150" />
                </div>
            }
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
