@page "{id:int}"
@model EmploiApp.Areas.Identity.Pages.Account.Manage.DeleteCVModel
@{
    ViewData["Title"] = "Supprimer le CV";
}

<h2>Supprimer le CV</h2>

<p>Voulez-vous vraiment supprimer le CV : <strong>@Model.CV.Titre</strong> ?</p>

<form method="post">
    <input type="hidden" asp-for="CV.Id" />
    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
    <a asp-page="./ManageCV" class="btn btn-secondary">Annuler</a>
</form>
