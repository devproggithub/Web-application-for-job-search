@* Views/Recruteur/Index.cshtml *@
@model IEnumerable<EmploiApp.Models.OffreEmploi>
@{
    ViewData["Title"] = "Mes Offres d'Emploi";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Nouvelle Offre</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Type de Contrat</th>
            <th>Localisation</th>
            <th>Secteur</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TitreOffre</td>
                <td>@item.TypeContrat</td>
                <td>@item.Localisation</td>
                <td>@item.Secteur?.NomSecteur</td>
                <td>@item.DatePublication.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>